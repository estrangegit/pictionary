<!DOCTYPE html>
<html>
    <head>
        <%- include('head-section'); %>
        <link rel="stylesheet" href="/public/css/game.css" type="text/css">
        <title>Salle de jeu</title>
    </head>

    <body>
        <div class="container">
            <div class="row">
                <div class="jumbotron text-center col-sm-12">
                    <div class="row">
                        <div class="col-sm-2">
                            <a href="/pictionary">
                                <span class="fa fa-arrow-left"></span>
                            </a>
                        </div>
                        <div class="col-sm-5">
                            <h3 id="participantList"
                                data-pseudo=<%= pseudo %>
                                class="font-weight-light">
                                Liste des participants: ...
                            </h3>
                        </div>
                        <div class="col-sm-5">
                            <h5 id="scoreList"
                                class="font-weight-light">
                                Scores: ...
                            </h5>
                        </div>
                    </div>
                </div>
            </div>
            <div id="game-waiting">
                <div class="row">
                    <div class="jumbotron col-sm-12 text-center">
                        <h4 class="font-weight-light">En attente des participants</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 text-center">
                        <div id="game-launcher" class="btn btn-primary">Lancer le jeu</div>
                    </div>
                </div>
            </div>
            <div id="game-on">
                <div class="row">
                    <div id="drawArea" class="col-sm-9">
                        <canvas class="whiteboard" width="700" height="500" ></canvas>
                    </div>
                    <div id="chatArea" class="col-sm-3">
                        <ul class="proposals"></ul>
                    </div>
                </div>
                <div class="row">
                    <div id="colors" class="col-sm-9">
                        <div class="color black"></div>
                        <div class="color red"></div>
                        <div class="color green"></div>
                        <div class="color blue"></div>
                        <div class="color yellow"></div>
                        <div class="clean-whiteboard">
                            <span class="fa fa-trash"></span>
                        </div>
                    </div>
                    <div id="chatProposal" class="col-sm-3">
                        <input type="text" class="form-control inputProposal" placeholder="Votre proposition..."/>
                    </div>
                </div>
            </div>
        </div>
        <%- include('script-section') %>
        <script src="/socket.io/socket.io.js"></script>
        <script src="/public/js/game-initialization.js"></script>
        <script src="/public/js/game-chat.js"></script>
        <script src="/public/js/game-whiteboard.js"></script>
        <script src="/public/js/game-connection.js"></script>
        <script src="/public/js/game.js"></script>
    </body>
</html>

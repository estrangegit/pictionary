{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "allowJs": true,
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "noImplicitAny": false,
      "esModuleInterop": true,
      "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/public/js/bootstrap",
        "src/public/js/jquery"
    ]
}

{
  "name": "pictionary",
  "version": "1.0.0",
  "description": "interactive pictionary game",
  "main": "server",
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": ".ts,.js,.ejs,.css",
    "ignore": [],
    "exec": "ts-node -r dotenv/config ./src/server.ts"
  },
  "scripts": {
    "clean": "rimraf ./dist/{*,.*}",
    "lint": "eslint . --ext .ts",
    "copy-assets": "ts-node tools/copyAssets",
    "create-env-file": "ts-node -r dotenv/config tools/createEnvFile",
    "tsc": "tsc",
    "build": "npm-run-all clean create-env-file lint tsc copy-assets",
    "start:dev": "npm run create-env-file && nodemon",
    "start": "npm run build && node -r dotenv/config ./dist/server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Etienne Estrangin",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "ejs": "^3.0.2",
    "ent": "^2.2.0",
    "express": "^4.17.1",
    "http": "0.0.1-security",
    "path": "^0.12.7",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.6",
    "@types/node": "^13.13.4",
    "@types/shelljs": "^0.8.7",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3"
  }
}
